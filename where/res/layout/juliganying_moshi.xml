<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backColor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
	    android:layout_height="52dp"
	    android:orientation="horizontal"
	    android:background="@color/qianhuise" >

        <ImageView
            android:id="@+id/Iamgeback"
            android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:src="@drawable/ic_arrow_back_grey600_36dp"/>

        <TextView
            android:id="@+id/titlejuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="距离感应模式"
            android:textColor="@color/shenhuise" 
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/JuliSetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_brightness_low_graw_36dp" />

    </RelativeLayout>
    <RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/contentColor"
	    >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#F8F8FF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/friend"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/renwu" />

        <TextView
            android:id="@+id/xiangqin"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/friend"
            android:layout_toRightOf="@+id/myself"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="详细信息显示栏"
            android:textColor="#4F4F4F"
            android:textSize="7pt" />

        <ImageView
            android:id="@+id/myself"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/login_face" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/m_map_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
  
     
