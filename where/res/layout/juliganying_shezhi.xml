<!--             /> -->

        <TextView
            android:id="@+id/titlejuli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="距离感应"
            android:textColor="@color/shenhuise" 
	        android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/Iamgesubmit"
            android:layout_width="36dp"
	        android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_done_white_36dp" />

    </RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/contentColor"
	    >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp" 
        android:background="@color/qianhuise">

        <TextView
            android:id="@+id/ganyingfanshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5pt"
            android:text="感应方式:"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:textSize="18sp"
             />

        <Spinner
            android:id="@+id/ganspinner"
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6pt"
            android:layout_toRightOf="@+id/ganyingfanshi"
            android:entries="@array/ganyingfanshispinner"
            android:background="@null"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:layout_marginTop="20dp"
        android:background="@color/qianhuise"
        android:orientation="horizontal" >

        <TextView
        android:id="@+id/ganyingbanjin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="感应半径:"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        />

<!--         <TextView -->
<!--             android:id="@+id/bangjingg" -->
