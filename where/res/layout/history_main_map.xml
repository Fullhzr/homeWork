<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="52dp"
	    android:orientation="horizontal"
	    android:background="@color/qianhuise" >
	    <TextView
	        android:id="@+id/lishiguji_map"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="历史轨迹"
	        android:textColor="@color/shenhuise" 
	        android:textSize="22sp"
	        />
	    <ImageView
	        android:id="@+id/ic_lishiguji_map_back"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="15dp"
	        android:src="@drawable/ic_arrow_back_grey600_36dp"
	        android:onClick="getBackClick" />
	</RelativeLayout>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/contentColor"
	    >
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
	
	    <com.baidu.mapapi.map.MapView
	        android:id="@+id/wheremap"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:clickable="true" />

	</RelativeLayout>

</LinearLayout>
	
